@page "/counter"
@layout AdminLayout

@using DashboardBlazor.Components.Layout

<PageTitle>شمارنده</PageTitle>

<h1>شمارنده</h1>

<p role="status">شمارش فعلی: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">روی من کلیک کن</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
